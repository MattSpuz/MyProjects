<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar bg-dark fixed-top">
            <div class="container-fluid">
                <h1 class="navbar-text text-white">Diet Manager</h1>
                <div style="margin-top: 5px">
                    <a asp-action="Secured" class="btn btn-info mr-2">Secured</a>
                    @if(!User.Identity.IsAuthenticated)
                    {
                        <a asp-action="SignIn" class="btn btn-info mr-2">Sign Up</a>
                        <a asp-action="Login" class="btn btn-info mr-2">Log In</a>
                    }
                    @if(User.Identity.IsAuthenticated )
                    {
                        <a asp-action="Logout" class="btn btn-info mr-2">Logout</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:100px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
